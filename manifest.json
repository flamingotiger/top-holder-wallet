{
  "manifest_version": 3,
  "name": "DexTint Holder Opener",
  "description": "Automatically opens holder market links from Solscan token holders tabs.",
  "version": "1.0",
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "icons/dextint16.png",
    "32": "icons/dextint32.png",
    "48": "icons/dextint48.png",
    "128": "icons/dextint128.png"
  },
  "host_permissions": [
    "https://solscan.io/token/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "DexTint Holder Opener",
    "default_icon": {
      "16": "icons/dextint16.png",
      "32": "icons/dextint32.png",
      "48": "icons/dextint48.png",
      "128": "icons/dextint128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://solscan.io/token/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
